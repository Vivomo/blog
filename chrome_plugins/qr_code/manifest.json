{
  "name" : "QR Code",
  "version" : "1.2.2",
  "manifest_version": 2,
  "description": "A light weight QR Code",
  "icons": {
    "48": "qrcode.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "qrcode.png"
    },
    "default_popup": "popup.html",
    "default_title": "Create a QR Code for url"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start",
      "matches": [ "http://*/*", "https://*/*" ],
      "js": ["qrCode.js"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}
